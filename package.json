{
    "name": "eth-testing-monorepo",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
      "examples/*",
      "packages/*"
    ],
    "scripts": {
      "build": "turbo run build",
      "lint": "turbo run lint",
      "test": "turbo run test",
      "format": "prettier --write \"**/*.{ts,tsx,md}\"",
      "release": "turbo run build lint test && changeset version && changeset publish"
    },
    "devDependencies": {
      "prettier": "latest",
      "husky": "^4.3.7",
      "lint-staged": "^10.5.3",
      "turbo": "latest"
    },
    "engines": {
      "node": ">=14.0.0"
    },
    "dependencies": {
      "@changesets/cli": "^2.26.0"
    },
    "lint-staged": {
      "packages/**/.{ts,tsx,js,jsx,json,css,md,yml,yaml}": [
        "turbo run lint",
        "prettier --write \"**/*.{ts,tsx,md}\""
      ]
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "packageManager": "npm@8.5.5"
  }
  